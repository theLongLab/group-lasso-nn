{
    "name": "LipidTestNet_BMI",
    "n_gpu": 1,

    "arch": {
        "type": "LipidMLP",
        "args": {}
    },
    "data_loader": {
        "type": "LipidDataLoader",
        "args":{
            "data_dir": "data/processed/bmires",
            "blocksize": 5e6,
            "batch_size": 10,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "adj_rsqr",
        "args": {}
    },
    "metrics": {
        "rmse": {},
        "rsquared": {}
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
